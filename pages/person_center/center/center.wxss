page {
  background-color: #F5F5F5;
}

.people{
  display: flex;
  align-items: center;
  padding: 20rpx;
  font-size: 28rpx;
  color: #3C3C3C;
  background-color: #FFFFFF;
  margin: 15rpx 0;
}
.people image{
  width: 100rpx;
  height: 100rpx;
  display: block;
  border-radius: 50%;
  margin-right: 20rpx;
}

/*菜单*/
.menuItem{
    display: flex;
    flex-direction: row;
    align-items: center;
    height: 50rpx;
    line-height: 50rpx;
    padding: 20rpx;
    background-color: #FFFFFF;
    margin-bottom: 2rpx;
}
.menuItem .image{
    width: 50rpx;
}
.menuItem .image image{
    width: 28rpx;
    display: block;
}
.menuItem .title{
    width: 610rpx;
    font-size: 24rpx;
    color: #686868;
}
.menuItem .look{
    width: 50rpx;
}
.menuItem .look image{
    width: 15rpx;
    height: 25rpx;
    margin-left: 10rpx;
}
/* 是否支付 */
.isNeedPay{
  position: absolute;
  width: 14rpx;
  height: 14rpx;
  background-color:#FF6664;
  border-radius:50%;
  margin-top: -10rpx;
  margin-left: 150rpx;
}